# Visionary Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
WEBUI_NAME=Visionary
WEBUI_SECRET_KEY=your-secret-key-change-in-production
WEBUI_AUTH=true
WEBUI_AUTH_TRUSTED_EMAIL_HEADER=
WEBUI_URL=http://localhost:3000
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=mongodb://admin:password@mongo:27017/visionary
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_INITDB_DATABASE=visionary

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# MinIO Object Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_PREFIX=visionary

# API Keys and External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
SERPAPI_API_KEY=
TAVILY_API_KEY=

# TTS Configuration
TTS_ENGINE=edge-tts
TTS_VOICE=en-US-AriaNeural
TTS_RATE=1.0
TTS_VOLUME=1.0

# RAG Configuration
ENABLE_RAG_WEB_SEARCH=true
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_RERANKING_MODEL=
CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Email Configuration (for MailHog in dev)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USE_TLS=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@visionary.local

# Security
JWT_SECRET_KEY=your-jwt-secret-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Worker Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
WORKER_CONCURRENCY=4

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_API_KEY=true
ENABLE_COMMUNITY_SHARING=false
ENABLE_ADMIN_PANEL=true

# Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=pdf,txt,md,doc,docx,mp3,mp4,webm,wav

# Performance
CACHE_TTL=3600
PRESIGNED_URL_TTL=3600
MAX_WORKERS=4
CONNECTION_POOL_SIZE=10
